{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "Plex": {
    "BaseUrl": "http://localhost:32400",
    "AuthToken": "<plex-token>",
    "CacheExpiry": 3600
  },

  "FileSystem": {
    "FolderDefinitions": [
      {
        "Name": "Films",
        "FolderPath": "\\\\LOCALHOST\\Films",
        "SupportedFileExtensions": [ "mkv", "ts", "mp4" ]
      }
    ]
  }
}
